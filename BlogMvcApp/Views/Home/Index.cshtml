@model IEnumerable<BlogMvcApp.Models.BlogPost>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Blog Yazıları</h1>
        <a class="btn btn-primary" asp-action="Create">Yeni Yazı Ekle</a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <div class="card-text">
                                @Html.Raw(post.Content)
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <small>@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>Henüz hiç yazı yok!</h4>
            <p>İlk yazınızı eklemek için "Yeni Yazı Ekle" butonuna tıklayın.</p>
        </div>
    }
</div>
